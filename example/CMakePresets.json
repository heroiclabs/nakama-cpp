{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "description": "",
            "binaryDir": "build/${presetName}",
            "installDir": "out",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;MinSizeRel",
                "CMAKE_INSTALL_LIBDIR": "${presetName}"
            }
        },
        {
            "name": "win-x86",
            "inherits": [
                "default"
            ],
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "WindowsDesktop": "ON",
                "VCPKG_HOST_TRIPLET": "x86-windows-release",
                "VCPKG_TARGET_TRIPLET": "x86-windows-release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "macosx-arm64-host_arm64",
            "inherits": [
                "default"
            ],
            "installDir": "out",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-arm64",
                "VCPKG_HOST_TRIPLET": "arm64-osx-release",
                "VCPKG_TARGET_TRIPLET": "arm64-osx-release",
                "CMAKE_OSX_ARCHITECTURES": "arm64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "macosx-arm64-host_x64",
            "inherits": [
                "macosx-arm64-host_arm64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-arm64",
                "VCPKG_HOST_TRIPLET": "x64-osx-release",
                "CMAKE_OSX_ARCHITECTURES": "arm64"
            }
        },
        {
            "name": "macosx-x64-host_x64",
            "inherits": [
                "macosx-arm64-host_x64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-x64",
                "VCPKG_HOST_TRIPLET": "x64-osx-release",
                "VCPKG_TARGET_TRIPLET": "x64-osx-release",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "macosx-x64-host_arm64",
            "inherits": [
                "macosx-x64-host_x64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-x64",
                "VCPKG_HOST_TRIPLET": "arm64-osx-release",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "ios-arm64-host_arm64",
            "inherits": [
                "macosx-arm64-host_arm64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "ios-arm64",
                "VCPKG_TARGET_TRIPLET": "arm64-ios-release",
                "CMAKE_SYSTEM_NAME": "iOS"
            }
        },
        {
            "name": "ios-arm64-host_x64",
            "inherits": [
                "ios-arm64-host_arm64"
            ],
            "installDir": "out",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "ios-arm64",
                "VCPKG_TARGET_TRIPLET": "arm64-ios",
                "VCPKG_HOST_TRIPLET": "x64-osx-release"
            }
        },
        {
            "name": "iphonesimulator-x64-host_arm64",
            "inherits": [
                "macosx-x64-host_arm64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "iphonesimulator-x64",
                "VCPKG_TARGET_TRIPLET": "x64-iphonesimulator-release",
                "CMAKE_SYSTEM_NAME": "iOS",
                "CMAKE_OSX_SYSROOT": "iphonesimulator",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "iphonesimulator-x64-host_x64",
            "inherits": [
                "iphonesimulator-x64-host_arm64"
            ],
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-release"
            }
        },
        {
            "name": "linux-amd64",
            "inherits": [
                "default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-linux-release",
                "VCPKG_TARGET_TRIPLET": "x64-linux-release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "ubuntu1804-amd64",
            "inherits": [
                "linux-amd64"
            ],
            "hidden": true,
            "environment": {
                "CC": "/usr/bin/gcc-11",
                "CXX": "/usr/bin/g++-11"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release-win-x86",
            "configurePreset": "win-x86",
            "configuration": "MinSizeRel",
            "verbose": true
        },
        {
            "name": "debug-win-x86",
            "configurePreset": "win-x86",
            "configuration": "Debug"
        },
        {
            "name": "release-linux-amd64",
            "configurePreset": "linux-amd64",
            "configuration": "MinSizeRel"
        },
        {
            "name": "debug-linux-amd64",
            "configurePreset": "linux-amd64",
            "configuration": "Debug"
        },
        {
            "name": "debug-macosx-arm64",
            "configurePreset": "macosx-arm64-host_x64",
            "configuration": "Debug",
            "nativeToolOptions": [
                "-allowProvisioningUpdates"
            ],
            "verbose": true
        },
        {
            "name": "release-macosx-arm64",
            "configurePreset": "macosx-arm64-host_x64",
            "configuration": "MinSizeRel",
            "nativeToolOptions": [
                "-allowProvisioningUpdates"
            ],
            "verbose": true
        },
        {
            "name": "debug-macosx-x64",
            "configurePreset": "macosx-x64-host_x64",
            "configuration": "Debug",
            "nativeToolOptions": [
                "-allowProvisioningUpdates"
            ],
            "verbose": true
        },
        {
            "name": "release-macosx-x64",
            "configurePreset": "macosx-x64-host_x64",
            "configuration": "MinSizeRel",
            "nativeToolOptions": [
                "-allowProvisioningUpdates"
            ],
            "verbose": true
        },
        {
            "name": "release-ios-arm64",
            "configurePreset": "ios-arm64-host_x64",
            "configuration": "MinSizeRel",
            "nativeToolOptions": [
                "-allowProvisioningUpdates"
            ],
            "verbose": true
        }
    ]
}