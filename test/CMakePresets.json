{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "binaryDir": "build/${presetName}",
            "installDir": "out",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "${presetName}",
                "CMAKE_CONFIGURATION_TYPES": "Debug;MinSizeRel",
                "RAPIDJSON_BUILD_DOC": "OFF",
                "RAPIDJSON_BUILD_EXAMPLES": "OFF",
                "RAPIDJSON_BUILD_TESTS": "OFF",
                "RAPIDJSON_BUILD_THIRDPARTY_GTEST": "OFF",
                "BUILD_SHARED_LIBS": "ON"
            }
        },
        {
            "name": "win-x64",
            "inherits": [
                "default"
            ],
            "cacheVariables": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "macosx-arm64-host_arm64",
            "inherits": [
                "default"
            ],
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-arm64",
                "CMAKE_OSX_ARCHITECTURES": "arm64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "macosx-arm64-host_x64",
            "inherits": [
                "macosx-arm64-host_arm64"
            ],
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-arm64",
                "CMAKE_OSX_ARCHITECTURES": "arm64"
            }
        },
        {
            "name": "macosx-x64-host_x64",
            "inherits": [
                "macosx-arm64-host_x64"
            ],
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-x64",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "macosx-x64-host_arm64",
            "inherits": [
                "macosx-x64-host_x64"
            ],
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-x64",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "ios-arm64-host_arm64",
            "inherits": [
                "macosx-arm64-host_arm64"
            ],
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "ios-arm64",
                "CMAKE_SYSTEM_NAME": "iOS",
                "CMAKE_SYSTEM_VERSION": "15"
            }
        },
        {
            "name": "ios-arm64-host_x64",
            "inherits": [
                "ios-arm64-host_arm64"
            ],
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "ios-arm64"
            }
        },
        {
            "name": "iphonesimulator-x64-host_arm64",
            "inherits": [
                "macosx-x64-host_arm64"
            ],
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "iphonesimulator-x64",
                "CMAKE_SYSTEM_NAME": "iOS",
                "CMAKE_OSX_SYSROOT": "iphonesimulator",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "iphonesimulator-x64-host_x64",
            "inherits": [
                "iphonesimulator-x64-host_arm64"
            ],
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-heroic"
            }
        },
        {
            "name": "linux-amd64",
            "inherits": [
                "default"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "android-default",
            "inherits": [
                "default"
            ],
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "ANDROID_USE_LEGACY_TOOLCHAIN_FILE": "FALSE",
                "ANDROID_ARM_NEON": "ON",
                "ANDROID_STL": "c++_shared",
                "ANDROID_PLATFORM": "android-21",
                "CMAKE_SYSTEM_NAME": "Android"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "environment": {
                "NDK": "$env{ANDROID_NDK_HOME}"
            }
        },
        {
            "name": "android-armeabi-v7a-host_osx_x64",
            "inherits": [
                "android-default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx",
                "VCPKG_TARGET_TRIPLET": "arm-android",
                "ANDROID_ABI": "armeabi-v7a"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "android-arm64-v8a-host_osx_x64",
            "inherits": [
                "android-default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx",
                "VCPKG_TARGET_TRIPLET": "arm64-android",
                "ANDROID_ABI": "arm64-v8a"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "android-x64-host_osx_x64",
            "inherits": [
                "android-default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx",
                "VCPKG_TARGET_TRIPLET": "x64-android",
                "ANDROID_ABI": "x64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release-win-x64",
            "configurePreset": "win-x64",
            "configuration": "MinSizeRel",
            "verbose": true
        },
        {
            "name": "debug-win-x64",
            "configurePreset": "win-x64",
            "configuration": "Debug"
        },
        {
            "name": "release-linux-amd64",
            "configurePreset": "linux-amd64",
            "configuration": "MinSizeRel"
        },
        {
            "name": "debug-linux-amd64",
            "configurePreset": "linux-amd64",
            "configuration": "Debug"
        },
        {
            "name": "debug-macosx-arm64",
            "configurePreset": "macosx-arm64-host_x64",
            "configuration": "Debug",
            "verbose": true,
            "nativeToolOptions": [
                "-allowProvisioningUpdates"
            ]
        },
        {
            "name": "debug-macosx-x64",
            "configurePreset": "macosx-x64-host_x64",
            "configuration": "Debug",
            "verbose": true,
            "nativeToolOptions": [
                "-allowProvisioningUpdates"
            ]
        },
        {
            "name": "release-macosx-arm64",
            "configurePreset": "macosx-arm64-host_x64",
            "configuration": "MinSizeRel",
            "verbose": true,
            "nativeToolOptions": [
                "-allowProvisioningUpdates"
            ]
        },
        {
            "name": "release-macosx-x64",
            "configurePreset": "macosx-x64-host_x64",
            "configuration": "MinSizeRel",
            "verbose": true,
            "nativeToolOptions": [
                "-allowProvisioningUpdates"
            ]
        },
        {
            "name": "release-ios-arm64",
            "configurePreset": "ios-arm64-host_x64",
            "configuration": "MinSizeRel",
            "verbose": true,
            "nativeToolOptions": [
                "-allowProvisioningUpdates"
            ]
        }
    ]
}
