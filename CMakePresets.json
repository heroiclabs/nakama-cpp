{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "description": "No shipped websocket or http implementation.",
            "binaryDir": "build/${presetName}",
            "installDir": "out",
            "hidden": true,
            "cacheVariables": {
                "LOGS_ENABLED": "ON",
                "CMAKE_INSTALL_LIBDIR": "${presetName}",
                "CMAKE_INSTALL_DEFAULT_COMPONENT_NAME": "nakama-sdk",
                "BUILD_SHARED_LIBS": "ON"
            }
        },
        {
            "name": "win-x64",
            "inherits": [
                "default"
            ],
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "WindowsDesktop": "ON",
                "VCPKG_HOST_TRIPLET": "x64-windows-static-heroic",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static-heroic",
                "WITH_LIBHTTPCLIENT_HTTP": "ON",
                "WITH_LIBHTTPCLIENT_WS": "ON",
                "VCPKG_MANIFEST_FEATURES": "libhttpclient-ws;libhttpclient-http"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "macosx-arm64-host_arm64",
            "inherits": [
                "default"
            ],
            "installDir": "out",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-arm64",
                "VCPKG_HOST_TRIPLET": "arm64-osx-heroic",
                "VCPKG_TARGET_TRIPLET": "arm64-osx-heroic",
                "CMAKE_OSX_ARCHITECTURES": "arm64",
                "WITH_LIBHTTPCLIENT_HTTP": "ON",
                "BUILD_WSLAY": "ON",
                "BUILD_CURL": "ON",
                "VCPKG_MANIFEST_FEATURES": "wslay;curl"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "macosx-arm64-host_x64",
            "inherits": [
                "macosx-arm64-host_arm64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-arm64",
                "VCPKG_HOST_TRIPLET": "x64-osx-heroic",
                "CMAKE_OSX_ARCHITECTURES": "arm64"
            }
        },
        {
            "name": "macosx-x64-host_x64",
            "inherits": [
                "macosx-arm64-host_x64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-x64",
                "VCPKG_HOST_TRIPLET": "x64-osx-heroic",
                "VCPKG_TARGET_TRIPLET": "x64-osx-heroic",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "macosx-x64-host_arm64",
            "inherits": [
                "macosx-x64-host_x64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "macosx-x64",
                "VCPKG_HOST_TRIPLET": "arm64-osx-heroic",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "ios-arm64-host_arm64",
            "inherits": [
                "macosx-arm64-host_arm64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "ios-arm64",
                "VCPKG_TARGET_TRIPLET": "arm64-ios-heroic",
                "CMAKE_SYSTEM_NAME": "iOS",
                "BUILD_WSLAY": "ON",
                "BUILD_CURL": "ON"
            }
        },
        {
            "name": "ios-arm64-host_x64",
            "inherits": [
                "ios-arm64-host_arm64"
            ],
            "installDir": "out",
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "ios-arm64",
                "VCPKG_TARGET_TRIPLET": "arm64-ios-heroic",
                "VCPKG_HOST_TRIPLET": "x64-osx-heroic"
            }
        },
        {
            "name": "iphonesimulator-x64-host_arm64",
            "inherits": [
                "macosx-x64-host_arm64"
            ],
            "cacheVariables": {
                "CMAKE_INSTALL_LIBDIR": "iphonesimulator-x64",
                "VCPKG_TARGET_TRIPLET": "x64-iphonesimulator-heroic",
                "CMAKE_SYSTEM_NAME": "iOS",
                "CMAKE_OSX_SYSROOT": "iphonesimulator",
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "iphonesimulator-x64-host_x64",
            "inherits": [
                "iphonesimulator-x64-host_arm64"
            ],
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-heroic"
            }
        },
        {
            "name": "android-default",
            "inherits": [
                "default"
            ],
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "ANDROID_USE_LEGACY_TOOLCHAIN_FILE": "FALSE",
                "ANDROID_ARM_NEON": "ON",
                "ANDROID_STL": "c++_shared",
                "WITH_LIBHTTPCLIENT_HTTP": "ON",
                "WITH_LIBHTTPCLIENT_WS": "ON",
                "VCPKG_MANIFEST_FEATURES": "libhttpclient-ws;libhttpclient-http",
                "ANDROID_PLATFORM": "android-21"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "environment": {
                "NDK": "$env{NAKAMA_ANDROID_NDK}"
            }
        },
        {
            "name": "android-armeabi-v7a-host_osx_x64",
            "inherits": [
                "android-default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-heroic",
                "VCPKG_TARGET_TRIPLET": "arm-android-heroic",
                "ANDROID_ABI": "armeabi-v7a"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "environment": {
                "NDK": "$env{NAKAMA_ANDROID_NDK}"
            }
        },
        {
            "name": "android-arm64-v8a-host_osx_x64",
            "inherits": [
                "android-default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-heroic",
                "VCPKG_TARGET_TRIPLET": "arm64-android-heroic",
                "ANDROID_ABI": "arm64-v8a"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "environment": {
                "NDK": "$env{NAKAMA_ANDROID_NDK}"
            }
        },
        {
            "name": "android-x64-host_osx_x64",
            "inherits": [
                "android-default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-osx-heroic",
                "VCPKG_TARGET_TRIPLET": "x64-android-heroic",
                "ANDROID_ABI": "x64"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "environment": {
                "NDK": "$env{NAKAMA_ANDROID_NDK}"
            }
        },
        {
            "name": "linux-amd64",
            "inherits": [
                "default"
            ],
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "VCPKG_HOST_TRIPLET": "x64-linux-heroic",
                "VCPKG_TARGET_TRIPLET": "x64-linux-heroic",
                "WITH_LIBHTTPCLIENT_HTTP": "ON",
                "BUILD_WSLAY": "ON",
                "BUILD_CURL": "ON",
                "VCPKG_MANIFEST_FEATURES": "curl;wslay"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "ubuntu1804-amd64",
            "inherits": [
                "linux-amd64"
            ],
            "hidden": true,
            "environment": {
                "CC": "/usr/bin/gcc-11",
                "CXX": "/usr/bin/g++-11"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "release-win-x64",
            "configurePreset": "win-x64",
            "configuration": "MinSizeRel",
            "verbose": true
        },
        {
            "name": "debug-win-x64",
            "configurePreset": "win-x64",
            "configuration": "Debug"
        },
        {
            "name": "release-linux-amd64",
            "configurePreset": "linux-amd64",
            "configuration": "MinSizeRel"
        },
        {
            "name": "debug-linux-amd64",
            "configurePreset": "linux-amd64",
            "configuration": "Debug"
        },
        {
            "name": "debug-macosx-arm64",
            "configurePreset": "macosx-arm64-host_x64",
            "configuration": "Debug",
            "verbose": true
        },
        {
            "name": "release-macosx-arm64",
            "configurePreset": "macosx-arm64-host_x64",
            "configuration": "MinSizeRel",
            "verbose": true
        },
        {
            "name": "debug-macosx-x64",
            "configurePreset": "macosx-x64-host_x64",
            "configuration": "Debug",
            "verbose": true
        },
        {
            "name": "release-macosx-x64",
            "configurePreset": "macosx-x64-host_x64",
            "configuration": "MinSizeRel",
            "verbose": true
        },
        {
            "name": "release-ios-arm64",
            "configurePreset": "ios-arm64-host_x64",
            "configuration": "MinSizeRel",
            "verbose": true
        }
    ]
}